{"ast":null,"code":"import SalesmanNav from 'components/nav/salesmanNav';\nimport HeaderPage from 'components/header/headerPage';\nimport GoodsManage from 'views/salesman/manage/goods';\nimport GoodsRecord from 'views/salesman/record/goods';\nexport default {\n  name: 'SalesmanHome',\n  components: {\n    SalesmanNav,\n    HeaderPage,\n    GoodsManage,\n    GoodsRecord\n  },\n\n  data() {\n    return {\n      isShow: '',\n      goods: [],\n      stationery: [],\n      show1: false,\n      show2: false,\n      Values: ['1-1', '2-1']\n    };\n  },\n\n  methods: {\n    getData() {\n      this.$http.get('/api/mall/getGoods').then(res => {\n        this.goods = res.data.data;\n      });\n    },\n\n    updateIsShow(key) {\n      this.isShow = key;\n    }\n\n  },\n  watch: {\n    isShow: {\n      handler(newValue, oldValue) {\n        // 将原页面内容隐藏，新页面内容显示\n        if (oldValue === '1-1') {\n          this.show1 = false;\n        } else if (oldValue === '2-1') {\n          this.show2 = false;\n        }\n\n        if (newValue === '1-1') {\n          this.show1 = true;\n        } else if (newValue === '2-1') {\n          this.show2 = true;\n        }\n      }\n\n    }\n  },\n\n  mounted() {\n    this.isShow = this.$store.state.index;\n    this.getData();\n  }\n\n};","map":{"version":3,"mappings":"AAqBA;AACA;AACA;AACA;AAEA;EACAA,oBADA;EAEAC;IACAC,WADA;IAEAC,UAFA;IAGAC,WAHA;IAIAC;EAJA,CAFA;;EAQAC;IACA;MACAC,UADA;MAEAC,SAFA;MAGAC,cAHA;MAIAC,YAJA;MAKAC,YALA;MAMAC;IANA;EAQA,CAjBA;;EAkBAC;IACAC;MACA,qCACAC,IADA,CACAC;QACA;MACA,CAHA;IAIA,CANA;;IAOAC;MACA;IACA;;EATA,CAlBA;EA6BAC;IACAX;MACAY;QACA;QACA;UACA;QACA,CAFA,MAEA;UACA;QACA;;QAEA;UACA;QACA,CAFA,MAEA;UACA;QACA;MACA;;IAdA;EADA,CA7BA;;EA+CAC;IACA;IACA;EACA;;AAlDA","names":["name","components","SalesmanNav","HeaderPage","GoodsManage","GoodsRecord","data","isShow","goods","stationery","show1","show2","Values","methods","getData","then","res","updateIsShow","watch","handler","mounted"],"sourceRoot":"src/views/salesman/home","sources":["index.vue"],"sourcesContent":["<template>\n    <div class=\"salesmanBody\">\n      <div class=\"header\">\n        <header-page></header-page>\n      </div>\n      <div class=\"main-container\">\n        <salesman-nav @conveyIsShow=\"updateIsShow\"></salesman-nav>\n        <div v-show=\"show1\">\n            <goods-manage\n            @getData=\"getData\"\n            :tableData=\"goods\"></goods-manage>\n        </div>\n        <div v-show=\"show3\">\n            <goods-record\n            :tableData=\"goods\"></goods-record>\n        </div>\n      </div>\n    </div>\n</template>\n\n<script>\nimport SalesmanNav from 'components/nav/salesmanNav'\nimport HeaderPage from 'components/header/headerPage'\nimport GoodsManage from 'views/salesman/manage/goods'\nimport GoodsRecord from 'views/salesman/record/goods'\n\nexport default {\n  name: 'SalesmanHome',\n  components: {\n    SalesmanNav,\n    HeaderPage,\n    GoodsManage,\n    GoodsRecord\n  },\n  data () {\n    return {\n      isShow: '',\n      goods: [],\n      stationery: [],\n      show1: false,\n      show2: false,\n      Values: ['1-1', '2-1']\n    }\n  },\n  methods: {\n    getData () {\n      this.$http.get('/api/mall/getGoods')\n        .then((res) => {\n          this.goods = res.data.data\n        })\n    },\n    updateIsShow (key) {\n      this.isShow = key\n    }\n  },\n  watch: {\n    isShow: {\n      handler (newValue, oldValue) {\n        // 将原页面内容隐藏，新页面内容显示\n        if (oldValue === '1-1') {\n          this.show1 = false\n        } else if (oldValue === '2-1') {\n          this.show2 = false\n        }\n\n        if (newValue === '1-1') {\n          this.show1 = true\n        } else if (newValue === '2-1') {\n          this.show2 = true\n        }\n      }\n    }\n  },\n  mounted () {\n    this.isShow = this.$store.state.index\n    this.getData()\n  }\n}\n</script>\n\n<style scoped>\n    .salesmanBody {\n      height: 100%;\n    }\n    .main-container {\n      display: flex;\n      flex-direction: row;\n      height: 100%;\n    }\n    .header {\n      width: 100%;\n    }\n    .content {\n      height: 100%;\n      width: 100%;\n    }\n</style>\n"]},"metadata":{},"sourceType":"module"}